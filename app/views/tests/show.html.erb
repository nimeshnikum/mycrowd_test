<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @test.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:application_type) %>:</strong></dt>
  <dd><%= @test.application_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructions) %>:</strong></dt>
  <dd><%= @test.instructions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bounty) %>:</strong></dt>
  <dd><%= @test.bounty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @test.state %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_test_path(@test), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              test_path(@test),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
